{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  }
}
