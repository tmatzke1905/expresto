{
  "name": "expresto",
  "version": "0.1.0",
  "description": "Modular Express.js Middleware with security, hooks, monitoring and plugin support",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "keywords": [
    "express",
    "middleware",
    "typescript",
    "security",
    "hooks",
    "metrics"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tmatzke1905/expresto.git"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "nodemon",
    "build": "NODE_ENV=production tsup",
    "build:dev": "NODE_ENV=development tsup",
    "start": "node ./dist/index.cjs",
    "start:dev": "ts-node src/index.ts ./middleware.config.json",
    "start:prod": "node ./dist/index.cjs ./middleware.config.prod.json",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "validate": "ts-node src/cli.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage"
  },
  "author": "Thomas Matzke",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jose": "^6.1.0",
    "log4js": "^6.9.1",
    "node-cron": "^4.2.1",
    "prom-client": "^15.1.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.10",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
